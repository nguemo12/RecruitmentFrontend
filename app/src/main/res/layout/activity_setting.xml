<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".setting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <TextView
        android:id="@+id/buttonChoose"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
       android:textColor="@color/white"
        android:text="Choose image"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corners"/>
        <TextView
            android:id="@+id/personname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fondem Princess"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/persontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designer"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/persondescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello i'm fondem and i'm a beast "
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="25sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"

            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@color/teal_700">
                <TextView
                    android:id="@+id/personresume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Resume"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="upload resume here"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColorHint="@color/white"/>
                <ImageView
                    android:id="@+id/imagecv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:layout_marginStart="120dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_corners"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_cloud_upload_24"
                        android:id="@+id/buttonUpload"
                        android:background="@color/teal_700"/>



                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Skills"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English language"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekbar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/language1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French language"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekbar1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/language2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web app development"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekbar2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/language5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commerce"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekbar5"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/language3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile app development"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekbar3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/newskill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new skill"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:textSize="25sp"
                />


        </LinearLayout>




    </LinearLayout>
</ScrollView>